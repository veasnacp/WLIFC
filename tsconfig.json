{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "types": ["bun-types"],
    "outDir": "./api",
    "rootDir": "./",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "api/index.ts"
  ],
  "exclude": [
    "node_modules",
    "api/**/*.js"
  ]
}
