{
  "compilerOptions": {
    "target": "esnext",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "types": ["bun-types"],
    "outDir": "./api",
    "rootDir": "./",
    "baseUrl": ".",
    "noEmitOnError": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@telecam": ["src/telecam/index.ts"],
      "@telecam/*": ["src/telecam/*"]
    },
    "jsx": "react",
    "jsxFactory": "Html.createElement",
    "jsxFragmentFactory": "Html.Fragment"
  },
  "include": [
    "src/**/*",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "api/**/*.js"
  ]
}
